@using (Html.BeginForm("", "", FormMethod.Post, new { enctype = "multipart/form-data", id = "letterForm" }))
{
    @Html.AntiForgeryToken()
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Bulk Letters Generator</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="fileInput" class="form-label">Upload CSV File</label>
                        <input type="file" class="form-control" id="fileInput" />
                        <input type ="hidden" id ="hid_ApiUrl" value="@ViewBag.ApiBaseUrl"/>
                    </div>
                    <button id="btnGenerate" type="button" class="btn btn-success w-100">Generate HTML of Letters</button>
                    <div id="result" class="mt-3"></div>
                    <div>
                        After click on 'Generate Html of Letters' Check your Downloads for generated HTML File.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/CustomJS/Index.js"></script>
